<div class="page-header">
  <h1>
    Job
    <span class="pager-header-item">
      <%= link_to(
        "Edit job",
        edit_job_path(@job)
      )%>
    </span>
    <span class="pager-header-item">
      <%= link_to(
        "New job",
        new_job_path
      )%>
    </span>
  </h1>
</div>

<div class="bs-component">
  <div class="list-group">
    <div class="list-group-item">
      <h4 class="list-group-item-heading">
        Title
      </h4>
      <p class="list-group-item-text">
        <%= @job.title %>
      </p>
    </div>
    <div class="list-group-item">
      <h4 class="list-group-item-heading">
        Body
      </h4>
      <p class="list-group-item-text">
        <%= @job.body %>
      </p>
    </div>
  </div>
  <%= link_to(
    "Apply now",
    new_application_path(@job),
    class: "btn btn-info btn-lg"
  )%>
</div>
