<%= form_for(
  @job,
  method: :put,
  role: "form",
  url: job_path(@job)
) do |f| %>
  <%= render(
    "shared/errors",
    object: @job
  )%>
  <div class="form-group">
    <%= f.label(
      :title,
      "Title"
    )%>
    <%= f.text_field(
      :title,
      class: "form-control",
      data: {
        "parsley-required"  => "true",
        "parsley-maxlength" => "255"
      },
      placeholder: "Enter title"
    )%>
  </div>
  <div class="form-group">
    <%= f.label(
      :body,
      "Body"
    )%>
    <%= f.text_area(
      :body,
      class: "form-control",
      data: {
        "parsley-required" => "true"
      },
      placeholder: "Enter body",
      rows: "10"
    )%>
  </div>
  <%= f.submit(
    "Submit",
    class: "btn btn-info",
    type: "submit"
  )%>
  <%= link_to(
    "Cancel",
    jobs_path,
    class: "btn btn-default"
  )%>
<% end %>
